#!/bin/bash
set -e

if [ "$1" = "configure" ]; then
    systemctl daemon-reload
    echo ""
    echo "=== copilot-key-handler installed ==="
    echo ""
    echo "To get started:"
    echo "  1. Edit /etc/copilot-key-handler/config.yaml (optional - auto-detection is enabled by default)"
    echo "  2. Enable and start the service:"
    echo "     sudo systemctl enable --now copilot-key-handler"
    echo ""
    echo "Press the Copilot key to launch Claude Code!"
    echo ""
fi

#DEBHELPER#
